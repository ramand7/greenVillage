{% extends 'base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}

{% include "_partials/_nav.html.twig" %}

	<section class="container my-3">
    <div class="row">
			<div class="col">
    		
				{{ form_start(form) }}

      	{{ form_errors(form) }}

				<fieldset class="my-3">

	   			{{ form_row(form.objet) }}

				</fieldset>
				<fieldset class="my-3">

       		{{ form_row(form.email) }}

				</fieldset>
				<fieldset class="my-3">
  
	     		{{ form_row(form.message) }} 

				</fieldset>

		 	</div>
    		
				{{ form_end(form) }}

			</div>

			<button type="submit" class="btn btn-sm btn-outline-success btn-lg mt-2">
				<h6>Envoyer</h6>
			</button>

		</div>

	</section>

{% endblock %}
