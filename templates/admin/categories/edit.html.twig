{% extends 'base.html.twig' %}

{% block title %}Editer les Categories{% endblock %}

{% block body %}

  <h1 class="text-center">MODIFIER LA CATEGORIE DES PRODUITS</h1>
	<section class="container my-3">
    <div class="row">
			<div class="col">  

				{{ form_start(form) }}
      	{{ form_errors(form) }}

				<fieldset class="my-3">
	   			{{ form_row(form.nom) }}
				</fieldset>

				<fieldset class="my-3">
       		{{ form_row(form.slug) }}
				</fieldset>

				<fieldset class="my-3">
	     		{{ form_row(form.image) }} 
				</fieldset>

				<fieldset class="my-3">
	     		{{ form_row(form.parent) }} 
				</fieldset>
		 	</div>
    		
		</div>

			<div class="row">
				<div class="col">
					<button type="submit" class="btn btn-sm btn-outline-success"><b>Mettre à jour</b></button>
					<a href="{{ path('app_categories_index') }}" class="btn btn-sm btn-outline-primary"><b>Retour à la liste</b></a>
				</div>
			</div>
				{{ form_end(form) }}
	</section>
{% endblock %}
