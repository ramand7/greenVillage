{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

{% include "_partials/_nav.html.twig" %}
    
    <section class="container my-3">
			<div class="row">
				<div class="col-6">
					<h2>Inscription</h2>

					{{ form_errors(registrationForm) }}

    			{{ form_start(registrationForm) }}

					<fieldset class="my-3">
						<legend>Mon identit√©</legend>
							{{ form_row(registrationForm.nom) }}
							{{ form_row(registrationForm.prenom) }}

					</fieldset>
					<fieldset class="my-3">
							<legend>Mes informations de connexion</legend>
							{{ form_row(registrationForm.email) }}
						  {{ form_row(registrationForm.plainPassword, {
            			label: 'Mot de passe'
        			}) }}
					</fieldset>

        	{{ form_row(registrationForm.RGPDConsent) }}

        	<button type="submit" class="btn btn-sm btn-outline-success btn-sm mt-3"><h6>M'inscrire</h6></button>
					<a class="btn btn-sm btn-outline-primary mt-3" href="{{ path('app_login') }}"><h6>Me connecter</h6></a>
    			{{ form_end(registrationForm) }}
				</div>
			</div>
		</section>
    



{% endblock %}
